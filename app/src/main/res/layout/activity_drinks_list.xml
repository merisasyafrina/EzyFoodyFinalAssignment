<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.MenuList">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deleteItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="28dp"
            android:text="Delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"></Button>

        <TextView
            android:id="@+id/txtItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="6dp"
            android:text="txtItem"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="122dp"></TextView>

        <TextView
            android:id="@+id/priceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="40dp"
            android:text="priceItem"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="122dp"></TextView>

        <TextView
            android:id="@+id/qtyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="75dp"
            android:text="qtyItem"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="122dp"></TextView>

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"></ImageView>

    </RelativeLayout>


</RelativeLayout>